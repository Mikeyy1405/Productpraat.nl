# LLM Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
OPENAI_API_KEY=your-openai-api-key-here  # Optional

# ProductPraat.nl Integration
PRODUCTPRAAT_API_URL=https://productpraat.nl
PRODUCTPRAAT_API_KEY=your-productpraat-api-key-here
PRODUCTPRAAT_WEBHOOK_SECRET=your-webhook-secret-here

# Bol.com Affiliate Integration
BOL_CLIENT_ID=your-bol-client-id
BOL_CLIENT_SECRET=your-bol-client-secret
BOL_SITE_CODE=your-bol-partner-site-code

# Agent Configuration
MAX_ITERATIONS=50
SANDBOX_TIMEOUT=300  # seconds
MODEL_ROUTING=true
DEFAULT_MODEL=claude-opus-4-20250514

# Model Selection
MODEL_COMPLEX=claude-opus-4-20250514      # Voor complexe taken
MODEL_FAST=claude-haiku-3-20250307        # Voor snelle taken
MODEL_CODING=claude-sonnet-4-20250514     # Voor code generatie

# Web Search (Optional)
BRAVE_API_KEY=your-brave-search-api-key
SERPAPI_KEY=your-serpapi-key

# Redis (Optional - voor task queue)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/agent.log

# Docker Sandbox
SANDBOX_IMAGE=productpraat-agent-sandbox:latest
SANDBOX_MEMORY_LIMIT=2g
SANDBOX_CPU_LIMIT=2.0
