# LLM Configuration (Abacus.AI)
ABACUS_API_KEY=your-abacus-api-key-here
ABACUS_BASE_URL=https://api.abacus.ai/v1

# ProductPraat.nl Integration (Optional - only needed for webhook callbacks)
# PRODUCTPRAAT_API_URL=https://productpraat.nl
# PRODUCTPRAAT_WEBHOOK_SECRET=your-webhook-secret-here

# Bol.com Affiliate Integration
BOL_CLIENT_ID=your-bol-client-id
BOL_CLIENT_SECRET=your-bol-client-secret
BOL_SITE_CODE=your-bol-partner-site-code

# Agent Configuration
MAX_ITERATIONS=50
SANDBOX_TIMEOUT=300  # seconds
MODEL_ROUTING=true
DEFAULT_MODEL=claude-3-5-sonnet

# Model Selection (via Abacus.AI)
MODEL_COMPLEX=claude-3-5-sonnet           # Voor complexe taken
MODEL_FAST=claude-3-haiku                 # Voor snelle taken
MODEL_CODING=claude-3-5-sonnet            # Voor code generatie

# Web Search (Optional)
BRAVE_API_KEY=your-brave-search-api-key
SERPAPI_KEY=your-serpapi-key

# Redis (Optional - voor task queue)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/agent.log

# Docker Sandbox
SANDBOX_IMAGE=productpraat-agent-sandbox:latest
SANDBOX_MEMORY_LIMIT=2g
SANDBOX_CPU_LIMIT=2.0
