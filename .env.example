# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# AI API Configuration (Claude/Anthropic) - REQUIRED for product import
VITE_ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Custom CORS Proxy for scraping
# VITE_CORS_PROXY=https://corsproxy.io/?

# =============================================================================
# AUTOMATION SETTINGS
# =============================================================================
# Enable/disable the automation system (default: true)
AUTOMATION_ENABLED=true

# Cron schedules for automated tasks (cron syntax, Amsterdam timezone)
# Default: Daily at 02:00
CRON_LINK_CHECK_TIME="0 2 * * *"
# Default: Daily at 03:00
CRON_COMMISSION_SYNC_TIME="0 3 * * *"
# Default: Monday, Wednesday, Friday at 09:00
CRON_CONTENT_GEN_TIME="0 9 * * 1,3,5"
# Default: Every hour
CRON_PUBLICATION_CHECK_TIME="0 * * * *"

# Retry settings for failed automation tasks
AUTOMATION_MAX_RETRIES=3

# =============================================================================
# AFFILIATE NETWORK CONFIGURATION
# =============================================================================
# Configure these to enable affiliate tracking for each network.
# Get your affiliate IDs from each network's partner/publisher dashboard.
#
# Physical Product Networks:
BOL_PARTNER_ID=your_bol_partner_id_here

# TradeTracker - https://www.tradetracker.com
# Get your Site ID from the TradeTracker publisher dashboard
TRADETRACKER_SITE_ID=your_tradetracker_site_id_here
TRADETRACKER_CAMPAIGN_ID=your_default_campaign_id_here

# Daisycon - https://www.daisycon.com
# Get your Publisher ID from the Daisycon dashboard
DAISYCON_PUBLISHER_ID=your_daisycon_publisher_id_here
DAISYCON_MEDIA_ID=productpraat

# Awin - https://www.awin.com
# Get your Publisher ID from the Awin dashboard
AWIN_PUBLISHER_ID=your_awin_publisher_id_here

# Digital Product Networks:
PAYPRO_AFFILIATE_ID=your_paypro_affiliate_id_here
PAYPRO_API_KEY=your_paypro_api_key_here
PLUGPAY_AFFILIATE_ID=your_plugpay_affiliate_id_here

# =============================================================================
# API KEYS FOR COMMISSION TRACKING
# =============================================================================
# These API keys are used by the commission tracker to fetch earnings data
# from each affiliate network. Get these from your network dashboards.
#
BOL_API_CLIENT_ID=your_bol_api_client_id
BOL_API_CLIENT_SECRET=your_bol_api_client_secret
TRADETRACKER_API_KEY=your_tradetracker_api_key
DAISYCON_API_KEY=your_daisycon_api_key
AWIN_API_KEY=your_awin_api_key

# =============================================================================
# ALERT & NOTIFICATION SETTINGS (Optional)
# =============================================================================
# Email notifications for critical alerts
# ALERT_EMAIL_RECIPIENTS=admin@example.com,team@example.com

# Slack webhook for notifications (get from Slack App settings)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# =============================================================================
# HOW TO GET AFFILIATE IDS:
# =============================================================================
# 
